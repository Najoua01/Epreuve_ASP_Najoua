@model IEnumerable<BLL_Epreuve.Entities.Produit>
@{
    ViewData["Title"] = "Home Page";
} 

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Epreuve_Asp.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
        </div>
       <br />
        <div class="produitListe">
            @foreach (var produit in Model)
            {
                <div class="produit">
                    <div class="image">
                        <img />
                        <p>image</p>
                    </div>
                    <div class="info">
                        <h3 class="titre">@produit.Nom</h3>
                        <br />
                        <p class="description">@produit.Description</p>
                        <h3 class="prix">@produit.Prix €</h3>
                    </div>
                </div>
            }
        </div>
    </body>
</html>
